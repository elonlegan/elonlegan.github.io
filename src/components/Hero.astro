---
const personalImageAlt = 'Angel Leon';
import Badge from '@/components/Badge.astro';
import LinkedInIcon from '@/components/icons/LinkedIn.astro';
import MailIcon from '@/components/icons/Mail.astro';
import SocialPill from '@/components/SocialPill.astro';
import DownloadIcon from '@/components/icons/Download.astro';
// removed CV button for now
---

<div>
	<div class='flex gap-4 mb-4'>
		<img
			class='rounded-full shadow-lg size-16 object-cover'
			src='/elonlegan.webp'
			alt={personalImageAlt}
		/>
		<a
			href='https://linkedin.com/in/elonlegan'
			target='_blank'
			rel='noopener'
			class='flex items-center transition md:justify-center md:hover:scale-105'
		>
			<Badge>Open to work</Badge>
		</a>
	</div>
	<h1
		class='text-4xl font-bold tracking-tight text-white sm:text-5xl'
	>
		Hey, I'm Angel Leon — Frontend Engineer
	</h1>
	<p
		class='mt-6 text-xl text-gray-300 [&>strong]:text-yellow-200 [&>strong]:font-semibold'
	>
		Frontend-focused engineer with <strong>4+ years</strong>
		building performant web apps with
		<strong>Angular, React/Next.js, and TypeScript</strong>.
		I care about <strong>UI quality</strong>, accessibility,
		and product impact—and I can contribute across the stack
		when needed.
	</p>
	<nav class='flex flex-wrap gap-4 mt-8'>
		<SocialPill href='mailto:elonlegan@gmail.com'>
			<MailIcon class='size-4' />
			Email
		</SocialPill>
		<SocialPill href='https://linkedin.com/in/elonlegan'>
			<LinkedInIcon class='size-4' />
			LinkedIn
		</SocialPill>
		<SocialPill
			href='https://docs.google.com/document/d/1jMki5gxkmBOc7fcFbfaP8iINqT6oGAf6BoAjhegFcQE/export?format=pdf'
			aria-label='Download resume as PDF'
		>
			<DownloadIcon class='size-4' />
			Download Resume
		</SocialPill>
	</nav>
</div>
